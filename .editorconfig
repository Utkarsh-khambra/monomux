root = true


[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
# Make sure there's a newline at the end of the files.
insert_final_newline = true


[*.{md,rst}]
trim_trailing_whitespace = false


[*.{c,cc,cpp,cxx,h,hh,hpp,hxx,i,ii,ipp,ixx,icc,inc}]
indent_style = space
indent_size = 2


[*.td]
indent_style = space
indent_size = 2
